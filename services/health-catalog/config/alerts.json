{
  "metadata": {
    "description": "Alert taxonomy, lifecycle, and payload contract",
    "owner": "health-catalog",
    "used_by": [
      "risk-analysis-service",
      "alert-notification-service",
      "data-storage-service",
      "dashboard-backend"
    ],
    "version": "1.0"
  },

  "threshold_profiles": [
    "STANDARD",
    "CARDIAC",
    "ELDERLY",
    "RESPIRATORY_RISK",
    "HIGH_RISK"
  ],

  "alert_types": [
    "THRESHOLD_BREACH",
    "DEVICE_DISCONNECTED",
    "LOW_BATTERY"
  ],

  "severities": ["normal", "warning", "critical"],

  "statuses": [
    "JUST_GENERATED",
    "ACKNOWLEDGED",
    "CLINICALLY_ASSESSED",
    "CLOSED"
  ],

  "lifecycle": {
    "initial_status": "JUST_GENERATED",
    "allowed_transitions": {
      "JUST_GENERATED": ["ACKNOWLEDGED"],
      "ACKNOWLEDGED": ["CLINICALLY_ASSESSED"],
      "CLINICALLY_ASSESSED": ["CLOSED"]
    }
  },

  "payload_contract": {
    "required_fields": [
      "assignment_id",
      "alert_type",
      "severity",
      "status",
      "threshold_profile",
      "description",
      "full_description",
      "metric",
      "value",
      "generated_at"
    ],
    "optional_fields": [
      "acknowledged_at",
      "reviewed_at",
      "reviewed_by",
      "clinical_note"
    ]
  }
}
