{
  "mqtt_topics": {
    "vitals": {
      "description": "Raw vital measurements published by wristbands",
      "publisher": "wristband-simulator",
      "subscribers": [
        "risk-analysis-service",
        "data-storage-service",
        "dashboard-backend"
      ],
      "template": "wristbands/{wristband_id}/vitals",
      "subscribe_pattern": "wristbands/+/vitals",
      "example": "wristbands/1/vitals"
    },

    "risk_events": {
      "description": "Preliminary risk events generated by Risk Analysis Service",
      "publisher": "risk-analysis-service",
      "subscribers": [
        "alert-notification-service"
      ],
      "template": "health/risk/{wristband_id}",
      "subscribe_pattern": "health/risk/+",
      "example": "health/risk/1"
    },

    "alerts": {
      "description": "Final alerts after enrichment and severity evaluation",
      "publisher": "alert-notification-service",
      "subscribers": [
        "dashboard-backend",
        "data-storage-service"
      ],
      "topic": "health/alerts",
      "subscribe_pattern": "health/alerts",
      "subscribe_pattern_wildcard": "health/alerts/#"
    }
  }
}
