{
  "metadata": {
    "description": "Service registry and discovery configuration",
    "owner": "health-catalog",
    "used_by": [
      "risk-analysis-service",
      "alert-notification-service",
      "data-storage-service",
      "dashboard-backend"
    ],
    "version": "1.0"
  },

  "services": [
    {
      "name": "health-catalog",
      "type": "config-service",
      "protocols": ["REST"],
      "base_url": "http://health-catalog:8001",
      "version": "v1"
    },
    {
      "name": "risk-analysis-service",
      "type": "backend-service",
      "protocols": ["MQTT", "REST"],
      "base_url": null,
      "version": "v1"
    },
    {
      "name": "alert-notification-service",
      "type": "backend-service",
      "protocols": ["MQTT", "REST"],
      "base_url": null,
      "version": "v1"
    },
    {
      "name": "data-storage-service",
      "type": "backend-service",
      "protocols": ["MQTT", "REST"],
      "base_url": "http://data-storage:8003",
      "version": "v1"
    },
    {
      "name": "dashboard-backend",
      "type": "orchestration-service",
      "protocols": ["MQTT", "REST", "WebSocket"],
      "base_url": "http://dashboard-backend:8000",
      "version": "v1"
    },
    {
      "name": "wristband-simulator",
      "type": "edge-device",
      "protocols": ["MQTT"],
      "base_url": null,
      "version": "v1"
    }
  ]
}
